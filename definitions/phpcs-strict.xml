<?xml version="1.0"?>
<ruleset name="silverstripe-coding-standards">
    <description>The coding standard of silverstripe-coding-standards package</description>
    <arg value="p" />

    <arg name="colors" />
    <arg value="s" />

    <rule ref="vendor/silverstripe/coding-standards/definitions/phpcs-simple.xml">
        <!-- Conflict with SlevomatCodingStandard.Classes.EmptyLinesAroundClassBraces.NoEmptyLineBeforeClosingBrace -->
        <exclude name="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody"/>
    </rule>

    <rule ref="vendor/consistence/coding-standard/Consistence/ruleset.xml">
        <exclude name="SlevomatCodingStandard.Namespaces.FullyQualifiedClassNameAfterKeyword" />
        <exclude name="SlevomatCodingStandard.TypeHints.TypeHintDeclaration" />
        <exclude name="SlevomatCodingStandard.TypeHints.DeclareStrictTypes" />
        <exclude name="Generic.WhiteSpace.DisallowSpaceIndent"/>
        <exclude name="Generic.WhiteSpace.ScopeIndent" />
        <!-- allow private static -->
        <exclude name="SlevomatCodingStandard.Classes.UnusedPrivateElements.UnusedProperty"/>
    </rule>
</ruleset>
