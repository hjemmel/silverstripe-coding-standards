{
    "name": "jdolba/silverstripe-coding-standards",
    "type": "library",
    "description": "Coding standards and more for your SilverStripe project",
    "keywords": [
        "silverstripe",
        "coding-standards",
        "silverstripe coding standards"
    ],
    "homepage": "https://github.com/jakubdolba/silverstripe-coding-standards",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Dolba",
            "email": "jakub.dolba@silverstripe.com",
            "homepage": "https://github.com/JakubDolba"
        }
    ],
    "require": {
        "php": "^7.1",
        "consistence/coding-standard": "^3.7",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit" : "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Silverstripe\\CodingStandards\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Silverstripe\\CodingStandards\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
